<Window x:Class="NpHw_2.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NpHw_2.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Почтовый индекс" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top"/>
            <TextBox Name="PostIndexTextBox" Background="LightGray" HorizontalAlignment="Left" Height="23" Margin="5,0,5,5" TextWrapping="Wrap" Width="120"/>
            <TextBox Name="StreetsTextBox"  IsReadOnly="True" HorizontalAlignment="Left" Height="195" Margin="5" TextWrapping="Wrap"  Width="211"/>
            <Button Click="SearchButtonClick" Content="Поиск" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
